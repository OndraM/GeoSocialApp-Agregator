<?php
$script = "var friends = [];";
foreach ($this->friends as $friend) {
    $script .= "friends.push({
        location: new google.maps.LatLng(" . $friend['lat'] . ", " . $friend['lng'] . "),
        name    : '{$friend['name']}',
        poiName : '{$friend['poiName']}',
        type    : '{$friend['type']}',
        service : '{$this->services[$friend['type']]['name']}',
        date    : {$friend['date']},
        avatar  : '{$friend['avatar']}'
    });";
}
$script .= "
    initFriends(friends);
";
echo $this->script($script, true);
?>
